<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- headline -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginLeft="@dimen/dimen_4"
        android:layout_marginRight="@dimen/dimen_4"
        android:gravity="center_horizontal|center_vertical"

        android:textSize="@dimen/dimen_7"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:id="@+id/informationAboutEnrolledExam_textView_headLine"/>

  <!-- TYPE -->
    <!-- left -->
    <TextView
        style="@style/textView_editModuleLEFT"
        android:layout_below="@+id/informationAboutEnrolledExam_textView_headLine"


        android:text="Type: "

        android:id="@+id/informationAboutEnrolledExam_textView_type"/>

    <!-- right -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Type: "

        android:layout_marginRight="@dimen/dimen_2"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_type"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:id="@+id/informationAboutEnrolledExam_textView_typeContent"/>

  <!-- DATE/TIME -->
    <!-- Left -->
    <TextView
        style="@style/textView_editModuleLEFT"
        android:layout_below="@+id/informationAboutEnrolledExam_textView_type"


        android:text="Datum-/Uhrzeit: "

        android:id="@+id/informationAboutEnrolledExam_textView_examDate"/>
    <!-- right -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Type: "

        android:layout_marginRight="@dimen/dimen_2"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_examDate"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:id="@+id/informationAboutEnrolledExam_textView_examDateTimeContent"/>


  <!-- Angemeldet am -->

    <!-- Left -->
    <TextView
       style="@style/textView_editModuleLEFT"

        android:layout_below="@+id/informationAboutEnrolledExam_textView_examDate"
        android:text="Angemeldet am: "

        android:id="@+id/informationAboutEnrolledExam_textView_examTime"/>

    <!-- right -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Time: "

        android:layout_marginRight="@dimen/dimen_1"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_examTime"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:id="@+id/informationAboutEnrolledExam_textView_examSubscribedDateTime"/>


    <!-- Room -->

    <TextView
        style="@style/textView_editModuleLEFT"

        android:layout_below="@+id/informationAboutEnrolledExam_textView_examSubscribedDateTime"
        android:text="Raum: "

        android:id="@+id/informationAboutEnrolledExam_textView_room"/>

    <!-- right -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_7"

        android:layout_marginRight="@dimen/dimen_1"
        android:background="@color/light_gray"

        android:hint="Raum eingeben ..."

        android:editable="false"
        android:visibility="invisible"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_roomContent"
        android:layout_toLeftOf="@+id/informationAboutEnrolledExam_textView_examDateTimeContent"
        android:layout_toStartOf="@+id/informationAboutEnrolledExam_textView_examDateTimeContent"

        android:id="@+id/informationAboutEnrolledExam_editText_room"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Time: "

        android:layout_marginRight="@dimen/dimen_1"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_room"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:id="@+id/informationAboutEnrolledExam_textView_roomContent"/>




    <!-- HORIZONTAL LINE-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_below="@+id/informationAboutEnrolledExam_textView_room"

        android:id="@+id/view_horizontalLine">
    </View>



  <!-- NOTE -->

    <!-- left -->
    <TextView
        style="@style/textView_editModuleLEFT"

        android:layout_below="@+id/view_horizontalLine"
        android:text="Note: "

        android:id="@+id/informationAboutEnrolledExam_textView_note"/>

    <!-- right -->
    <EditText
        android:layout_width="@dimen/dimen_10"
        android:layout_height="@dimen/dimen_10"

        android:layout_marginRight="@dimen/dimen_4"

        android:gravity="center"

        android:textStyle="bold"
        android:editable="false"

        android:background="@color/light_blue"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_note"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:id="@+id/informationAboutEnrolledExam_editText_note"/>



  <!-- CreditPoint -->

    <!-- left -->
    <TextView
        style="@style/textView_editModuleLEFT"

        android:layout_marginTop="@dimen/dimen_9"
        android:layout_below="@+id/informationAboutEnrolledExam_textView_note"
        android:text="CP: "

        android:id="@+id/informationAboutEnrolledExam_textView_cp"/>

    <!-- right -->
    <TextView
        android:layout_width="@dimen/dimen_10"
        android:layout_height="@dimen/dimen_10"

        android:layout_marginRight="@dimen/dimen_4"

        android:textStyle="bold"
        android:textSize="@dimen/dimen_6"
        android:background="@color/light_blue"

        android:gravity="center"
        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_cp"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:id="@+id/informationAboutEnrolledExam_editText_cp"/>


  <!-- Status -->
    <!-- left -->
    <TextView
        style="@style/textView_editModuleLEFT"

        android:layout_below="@+id/informationAboutEnrolledExam_textView_cp"
        android:layout_marginTop="@dimen/dimen_8.5"
        android:text="Status: "

        android:id="@+id/informationAboutEnrolledExam_textView_state"/>

    <!-- right -->
    <View
        android:layout_width="@dimen/dimen_10"
        android:layout_height="@dimen/dimen_10"

        android:layout_marginRight="@dimen/dimen_4"

        android:clickable="true"

        android:layout_alignTop="@+id/informationAboutEnrolledExam_textView_state"
        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_headLine"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_headLine"

        android:background="@color/black"

        android:id="@+id/informationAboutEnrolledExam_view_stateContent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/info_32x32"
        android:background="@null"
        android:layout_marginLeft="@dimen/dimen_2.5"

        android:id="@+id/informationAboutEnrolledExam_imageButton_info"
        android:layout_above="@+id/informationAboutEnrolledExam_textView_countTries"
        android:layout_alignLeft="@+id/informationAboutEnrolledExam_textView_countTries"
        android:layout_alignStart="@+id/informationAboutEnrolledExam_textView_countTries">

      </ImageButton>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textSize="@dimen/dimen_4"

        android:layout_alignRight="@+id/informationAboutEnrolledExam_textView_typeContent"
        android:layout_alignEnd="@+id/informationAboutEnrolledExam_textView_typeContent"
        android:layout_below="@+id/informationAboutEnrolledExam_view_stateContent"

        android:id="@+id/informationAboutEnrolledExam_textView_countTries"/>







</RelativeLayout>