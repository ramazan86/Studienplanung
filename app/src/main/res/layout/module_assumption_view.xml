<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/textView_headline"
        android:id="@+id/moduleAssumptionView_textView_headLine"/>


    <LinearLayout
        style="@style/linearLayout_assumption"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitte auswÃ¤hlen"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/white">
        </View>

        <Spinner
            android:padding="2dp"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_12.5"
            android:id="@+id/moduleAssumption_spinner_assumption">
        </Spinner>

    </LinearLayout>


    <!-- contentual -->
    <LinearLayout
        style="@style/linearLayout_assumption"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent"
        android:id="@+id/moduleAssumptionView_linearLayout_wrapScroll"
        android:visibility="invisible">


        <ScrollView
            android:layout_width="@dimen/dimen_75"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:editable="false"
                android:id="@+id/moduleAssumptionView_editText_Assumption"/>
        </ScrollView>

        <ImageButton
            style="@style/imageButton_iconPencil"
            android:id="@+id/moduleAssumptionView_imageButton_pencil"
            android:layout_gravity="bottom" />
    </LinearLayout>





</LinearLayout>