<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"

        android:src="@drawable/module_overview"

        android:id="@+id/myActionbar_imageView_image"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/myActionbar_imageView_image"
        android:layout_marginLeft="@dimen/dimen_1"

        android:layout_centerVertical="true"

        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/myActionbar_textView_title_text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_1"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="@string/add"
        android:textSize="@dimen/dimen_4"
        android:clickable="true"
        android:background="@null"
        android:id="@+id/myActionbar_textView_add"/>
</RelativeLayout>